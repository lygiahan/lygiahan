/*============================================================================
#Variable
==============================================================================*/
$gutter: 30px;
$main-color: {{ settings.main-color }};
$font-base:  "Roboto",sans-serif;
$hover: {{ settings.hover }};
$text-color: {{ settings.color_body_text }};
$price:{{ settings.color_price }};

/*============================================================================
9. Product Details
==============================================================================*/

.sec_tab {
	padding:30px 0;
}


.overflow-hidden {overflow: hidden;}
.title-product {
	color: $text-color;
	font-family: $font-base;
	line-height: 36px;
	font-size: 30px;
	font-weight: 400;
	margin: 0px 0px 15px;
}
.owl-recents {
	.owl-nav {
		display:none;
	}
}



.wrap_image_details {
	width:100%;
	float:left;
	background:#fff;
	position: relative;
	z-index: 444;
}
.details-product{
	.col_large_full{
		width:100% !important;
	}
}
#gallery_02{
	.slick-list {
		margin: 0 -10px;
	}
	.slick-slide {
		margin:0 10px;
	}
	.slick-arrow {
		top:50%;;
		position:absolute;
		font-size:0;
		z-index:1;
		padding:0;
		border:0;
		transform: translateY(-50%);
		&:before{
			font-family:"Font Awesome\ 5 Free";
			background:#fff;
			font-weight:900;
			font-size:16px;
			color:#d9d9d9;
			display: block;
			-webkit-transition: all ease 0.3s;
			-moz-transition: all ease 0.3s;
			-ms-transition: all ease 0.3s;
			-o-transition: all ease 0.3s;
			transition: all ease 0.3s;
			height: 30px;
			width: 20px;
			line-height: 28px;
			color: #333;
			border-radius: 0;
			background: #fff;
			border: solid 1px #ebebeb;
		}
		&:hover{
			&:before{
				color:$hover;
			}
		}
		&.slick-prev {
			left:0;
			&:before{
				content: "\f053";
			}
		}
		&.slick-next {
			right:7px;
			@media(max-width:991px){
				right:0;
			}
			&:before{
				content: "\f054";
			}
		}
	}
}

.slickthumb_relative_product_1{
	width: 97%;
	float: left;
	position: absolute;
	bottom: 50px;
	left: 10px;
	z-index:99;
	@media(max-width:767px){
		padding: 0 0px;
		left: 0px;
		width: 100%;
		position: relative;
		bottom: 0;
		margin-top: 5px;
	}
}
.thumb_product_details {
	margin: 0 auto;
	float:left;
	padding-bottom: 5px;
	width:100%;
	.item {
		a {
			display: flex;
			align-items: center;
			justify-content: center;
			background: #fff;
			border: 1px solid #ebebeb;
			height: 90px;
			width: 90px;
			@media (max-width: 991px) and (min-width:768px){
				width: 70px;
				height: 70px;
			}
			img {
				width: auto;
				margin: 0 auto;
				max-height: 100%;
				max-width: 100%;
			}
			&:hover {
				border: 1px solid $main-color;
			}
			&.active {
				border: 1px solid $main-color;
				img {
					opacity: 1;
				}
			}
		}
	}

	.owl-nav {
		.owl-next, .owl-prev {
			top:40%;
		}
	}



}
@media (max-width: 767px) {
	.thumb_product_details {
		width: 100%;
		margin-bottom:0;
	}
}

@media (max-width: 374px) {
	.thumb_product_details {

		.item {
			a {
				display: flex !important;
				align-items: center !important;
				justify-content: center !important;
				height:80px!important;
				width: 80px !important;
				display: block;
				border:solid 1px #ebebeb;
				img {
					max-height:100%;
					max-width:100%;
				}

				&.active {
					border-color: $hover;
					img {
						opacity: 1;
					}
				}
			}
		}
	}
}



/*Thông tin khuyến mãi*/
.rte-summary{
	font-family: $font-base;
	color: $text-color;
	font-size: 14px;
	ul, ol{
		li{
			position: relative;
			padding-left: 0px;
			margin-bottom: 0;
		}
	}
}


.social_share_product {
	display:block;
	text-align:center;
	.addthis_inline_share_toolbox {
		display: inline-block;
	}
}

#btnnewreview {
	font-size: 14px;
	line-height: 25px;
	font-weight: 500;
	margin: 0px;
	padding: 5px 15px !important;
	background: $main-color!important;
	border: solid 1px $main-color!important;
	display: inline;
	border-radius: 0px;
	color: #fff;
}

@media (max-width: 1199px) {
	.zoomContainer {display:none!important;}
	.product-thumb .product-big-wrapper .large-img .zoomWrapper {
		width:auto!important;
		height:auto!important;
		img {
			position:static!important;
		}
	}
}
@media (min-width: 1200px) {
	.zoomLens {
		width: 100px !important;
		height: 100px !important;
	}
	.zoomWrapper {
		width: 100%!important;
	}
	.zoomContainer {
		z-index:9!important;
	}
	.zoomWrapper img {
		position: static!important;
		max-width: 100%!important;
		height: auto!important;
		& ~ img{
			display: none!important;
		}
	}
}
@media (max-width: 767px) {
	.zoomWrapper {
		width: 100%!important;
		height:auto!important;
	}

	.related-product {
		margin-top:0px;
	}
}
.related-product{
	display: block;
	float: left;
	width: 100%;
	.product_related {
		margin-top: 20px;
	}
}
#recently-viewed-products{
	.image {
		float: left;
		width: 90px;
		margin-right: 10px;
	}
	.info {
		width: calc(100% - 100px);
		float: right;
	}
}
.zoomWrapper {
	width: 100%!important;
	height: auto!important;
}
.zoomWrapper img {
	position: static!important;
	width: auto!important;
	height: auto!important;
	display: block;
	margin: 0 auto;
	& ~ img{
		display: none!important;
	}
}



