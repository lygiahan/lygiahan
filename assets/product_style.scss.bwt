/********************************************************
TABS
********************************************************/
.tab_h {
	padding-bottom: 25px;
	position:relative;
}
.tab-wrap{
	.tabs-title{
		display: inline-block;
		position: relative;
		z-index: 9;
		margin: 0 0 26px;
		li{ 
			font-size: 2.2rem;  
			font-weight: 700;
			text-transform: uppercase;
			position: relative;
			line-height: 40px;
			float: left;

			&:before{
				content:"|";
				color: #c9c9c9;
				padding: 0 16px;
				color: #1c1c1c;
			}

			&:first-child{
				&:before{
					display: none;
				}
			}

			&.current{
				color: #212121;
			}
		}
	}

	.tab-content{
		position: relative;

	}

}
ul.tabs li{
	background: none;
	display: inline-block;
	cursor: pointer;
	&.current{
		color: #000;
	}
}
.tab-content{
	opacity: 0;
	visibility: hidden;
	height: 0;
	overflow: hidden;

	&.current{ 
		opacity: 1;
		visibility: visible;
		height: auto;
	}

}
.product-tab{
	.tabs-title {
		margin:0;
		padding:0;
		border-left:1px solid #e1e1e1;
		text-align: left;
		@media (max-width: 767px) {
			border:none;
			display:block;
			background:#fff;
		}
	}

	.tab-link{
		position: relative;
		display: inline-block;
		background: transparent;
		border-right:1px solid #e1e1e1;
		border-top:1px solid #e1e1e1;
		margin:0;
		padding: 13px 40px;
		float:left;
		font-weight: 500;
		-webkit-transition: color ease 0.3s;
		-moz-transition: color ease 0.3s;
		-ms-transition: color ease 0.3s;
		-o-transition: color ease 0.3s;
		transition: color ease 0.3s;
		@media (max-width: 767px) {
			width:100%;
			padding:0 10px;
			display:block;
			text-align:left;
			padding:12px;
			border:1px solid #ebebeb;
			margin-bottom:10px;
		}
		h3{
			color:$text-color;
			margin: 0;
			font-size:14px;
			font-family:$font-base;
			text-transform:uppercase;
			@media(max-width:767px){
				&:before{
					content: '\f107';
					font-size: 20px;
					font-family:"Font Awesome\ 5 Free";
					font-weight:900;
					float: right;
					margin-right: 0;
					margin-top: -5px;
				}
			}
		}
		span{
			color: $text-color;
			font-size: 14px;
			font-weight:700;
		}
		@media (min-width: 300px) and (max-width:767px) {
			&.current {
				background:#fff;
				h3{
					color: $hover;
					span {
						color: $hover;
					}
				}
			}
		}
		@media (min-width: 768px){
			&.current {
				background:#333;
				h3{
					color: #fff;
					position:relative;

					span {
						color: #fff;
					}
				}
			}
			&:hover{
				background:#333;
				h3{
					color: #fff;
					position:relative;

					span {
						color: #fff;
					}
				}
			}
		}
		&.current{

			&:before {
				font-family: 'Font Awesome\ 5 Free';
				font-weight:900;
				font-size:24px;
				color:#fff;
				content:"\f106";
				position:absolute;
				right:0px;
				top:6px;
				content:none;
			}

			.rte {
				color:$text-color;
				font-weight: 300;
				font-size:16px;
				border-top:0px;
				font-family:$font-base;
			}
		}
	}
	li {
		&:last-child {
			h3 {
				span {
					&:after {
						content: none;
					}
				}
			}
		}
	}
	.tab-content {
		&.current {
			padding: 25px;
			border: 1px solid #e1e1e1 !important;
			.rte {
				color: $text-color;
				border-top: none;
				font-size: 16px;
				font-family:$font-base;
				p {
					color: $text-color;
					margin:0;
				}
				ol,ul {
					padding-left: 15px;
				}
				@media (max-width: 1199px){
					padding: 30px 0 60px 0;
				}
			}
		}
	}
	.content_extab.current{
		.rte {
			padding: 0px 0px;
			img {
				max-width:100%;

			}
		}
		@media (min-width: 300px) {
			.rte {
				img {
					max-width:100%;
				}
			}
		}
	}
}
.content_extab{
	opacity: 0;
	visibility: hidden;
	height: 0;
	overflow: hidden;

	&.current{ 
		opacity: 1;
		visibility: visible;
		height: auto;
	}

}
.wrap_tab_ed {
	width:100%;
	float:left;
	padding: 0px 0 0;
	margin-bottom: 20px;
}
.bg_white {
	background:#fff;
}

.sec_lq {
	.product_related  {
		.item_product_main .product-thumbnail .image_thumb {
