.title_module {
	h2 {
		font-family:$font-base;
		margin:0;
		letter-spacing: 0;
		width:100%;
		display: inline-block;
		position: relative;
		font-weight: 700;
		padding: 0;
		color: #333;
		font-size: 24px;
		padding-bottom: 30px;
		margin: 0;
