/*============================================================================
#Variable
==============================================================================*/
$gutter: 30px;
$main-color: {{ settings.main-color }};
$font-base:   "Roboto",sans-serif;
$hover: {{ settings.hover }};
$text-color: {{ settings.color_body_text }};
$price:{{ settings.color_price }};


a{
	&:attr {
		class:'abc'
	}
}

@mixin controlslick(){
	.slick-slide{
		.slick-list {
			margin: 0 -20px;
		}
		.slick-slide {
			margin:0 20px;
		}
		&:hover, &:focus{
			outline:none;
			box-shadow:none;
			border:none;
		}
	}
	.slick-arrow{
		font-size: 0;
		line-height: 0;
		position: absolute;
		top: 50%;
		display: block;
		width: 25px;
		height: 25px;
		padding: 0;
		-webkit-transform: translate(0, -50%);
		-ms-transform: translate(0, -50%);
		transform: translate(0, -50%);
		cursor: pointer;
		color: transparent;
		border: none;
		outline: none;
		background: transparent;
		line-height: 25px;
		text-align: center;
		z-index: 2;
		&.slick-prev,&.slick-next{
			&:before{
				font-family:"Font Awesome\ 5 Free";
				background:#fff;
				font-weight:900;
				height: 25px;
				width: 25px;
				font-size:12px;
				color:#333;
				display: block;
				-webkit-transition: all ease 0.3s;
				-moz-transition: all ease 0.3s;
				-ms-transition: all ease 0.3s;
				-o-transition: all ease 0.3s;
				transition: all ease 0.3s;
			}
			&:hover{
				&:before{
					background:$hover;
				}
			}
		}
		&.slick-prev {
			left: 0;
			&:before{
				content: "\f053";
			}
		}
		&.slick-next {
			right: 0;
			&:before{
				content: "\f054";
			}
		}
	}
	.slick-dots{
		text-align: center;
		li{
			display:inline-block;
			button{
				border-radius: 0;
				height: 10px;
				width: 10px;
				border: 1px solid #e5e5e5;
				background-color: #fff;
				padding: 0;
				font-size: 0;
			}
			&.slick-active{
				button{
					border-color: $main-color;
					background-color: $main-color;
				}
			}
		}
	}
}
/*============================================================================
#Home
==============================================================================*/

/*Slider*/
.home-slider{
	@include controlslick();
	.slick-slide{
		margin: 0;
	}
	.slick-arrow{
		width:45px;
		height:45px;
		line-height:45px;
		&.slick-prev,&.slick-next{
			&:before{
				width:45px;
				height:45px;
				background:transparent;
				color:#dadbdb;
				font-size:50px;
				@media(max-width:767px){
					display:none;
				}
			}
			&:hover{
				&:before{
					background:transparent;
					color:$hover;
				}
			}
		}
		&.slick-prev{
			left:0;
		}
		&.slick-next{
			right:0;
		}
	}
	.slick-dots{
		position: absolute;
		bottom: 0;
		left: 0;
		right: 0;
		margin-left: auto;
		margin-right: auto;
		width: 100px;
		padding:0;
		border-radius: 15px;
		height: 24px;
		align-items: center;
		display: flex !important;
		justify-content: center;
		li{
			button{
				height: 12px;
				width: 12px;
				border: 1px solid #fff;
				background:#fff;
				border-radius:50%;
				margin:0 3px;
				@media(max-width:767px){
					height:10px;
					width:10px;
				}
			}
			&.slick-active{
				button{
					border-color: #363636;
					background-color: #363636;
					@media(max-width:767px){
						width:10px;
					}
				}
			}
		}
	}
}
/*Blog bar slider*/


.btn_45 {
